{
  "extends": "../tsconfig.options.json",
  "compilerOptions": {
    "composite": true,
    "incremental": true,
    "outDir": "./dist",
    "tsBuildInfoFile": "./typings/tsconfig.tsbuildinfo",
    "rootDir": "src",
    "noUncheckedIndexedAccess": true,

    "lib": ["es2021"],
    // Most classes in LSP are asynchronously initialized
    "strictPropertyInitialization": false,
    "skipLibCheck": true,
  },
  "include": [
    "src"
  ]
}
